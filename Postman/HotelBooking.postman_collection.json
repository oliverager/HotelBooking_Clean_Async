									"});"
								]
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Set dates in the future",
									"const tomorrow = new Date();",
									"tomorrow.setDate(tomorrow.getDate() + 30);",
									"const nextWeek = new Date(tomorrow);",
									"nextWeek.setDate(nextWeek.getDate() + 3);",
									"",
									"pm.environment.set('futureStartDate', tomorrow.toISOString().split('T')[0]);",
									"pm.environment.set('futureEndDate', nextWeek.toISOString().split('T')[0]);"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"startDate\": \"{{futureStartDate}}\",\n    \"endDate\": \"{{futureEndDate}}\",\n    \"customerId\": 1\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"]
						}
					}
				},
